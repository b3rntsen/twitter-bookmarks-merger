# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored, so it won't be committed

aws_region     = "us-east-1"
project_name   = "twitter-bookmarks"
environment    = "dev"
instance_type  = "t3.small"  # Recommended: t3.small (2GB RAM). Free-tier: t3.micro (eu-north-1), t2.micro (us-east-1)

# SSH Key Pair (optional - leave empty if not using SSH)
# Create with: aws ec2 create-key-pair --key-name twitter-bookmarks-key
key_pair_name  = "twitter-bookmarks-key"

# Restrict SSH access to your IP for better security
# Get your IP: curl -s https://checkip.amazonaws.com
ssh_allowed_cidrs = ["0.0.0.0/0"]  # Change to ["YOUR_IP/32"] for better security

