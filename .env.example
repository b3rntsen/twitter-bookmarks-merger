# Django Configuration
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hostnames
# For local: localhost,127.0.0.1,0.0.0.0
# For production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
# See SETUP_GUIDE.md for detailed instructions
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Encryption Key for Twitter Credentials
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# This encrypts stored Twitter passwords/cookies - keep it secure!
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Browser Automation (Selenium)
# Path to ChromeDriver (find with: which chromedriver)
# Install with: brew install chromedriver (macOS) or download from chromedriver.chromium.org
SELENIUM_DRIVER_PATH=/usr/local/bin/chromedriver

# Use Playwright instead of Selenium (True/False)
# If True, install with: pip install playwright && playwright install chromium
USE_PLAYWRIGHT=False

# AI Provider Configuration
# Anthropic Claude API Key (for tweet categorization and summarization)
# Get your API key from: https://console.anthropic.com/
# Leave empty if you want to use OpenAI instead (set OPENAI_API_KEY below)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Anthropic model to use (default: claude-3-5-sonnet-20241022)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API Key (alternative to Anthropic)
# Get your API key from: https://platform.openai.com/api-keys
# Leave empty if you want to use Anthropic instead
OPENAI_API_KEY=

# Optional: OpenAI model to use (default: gpt-4o)
OPENAI_MODEL=gpt-4o
